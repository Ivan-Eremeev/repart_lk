extends core/base.pug

block title 
  title Товары (плитка)

block content

  h1.title.title--mb60 Материально-техническое обеспечение - Личный кабинет РАпарт - Поставка - 
    span Каталог

  include blocks/sort.pug

  include blocks/filter.pug

  // table
  .table
    table.table__table

      tr 
        th 
          .table__table-title Дата
        th 
          .table__table-title № Заказчика
        th 
          .table__table-title Приоритет
        th 
          .table__table-title Статус

      tr.table__item  
        td 
          .table__table-text 16.06.2020
        td 
          .table__table-text AZT140720-HBS
        td 
          .table__table-text CRITICAL A (MEL A)
        td 
          .table__table-text КП выдано

      tr.table__has-table-row
        td(colspan="4").table__has-table-td
          table.table__drop
            tr 
              th 
                .table__drop-title №
              th 
                .table__drop-title P/N
              th 
                .table__drop-title Кол-во
              th 
                .table__drop-title Состояние
              th 
                .table__drop-title КП
              th 
                .table__drop-title Кол-во в КП
              th 
                .table__drop-title Срок поставки
              th 
                .table__drop-title Цена с НДС/ Ставка НДС
              th 
                .table__drop-title В заказ
            mixin table__drop-item(num)
              tr 
                td 
                  .table__drop-text= num
                td 
                  .table__drop-text T7.92.3701.905.000.70/A 
                  .table__drop-gray-text Бокс для персонального аварийного радиомаяка ПАРМ 406А
                td 
                  .table__drop-text.table__text-center 2 шт
                td 
                  .table__drop-text КП направлено
                  .table__drop-gray-text Действует до 01.02.2023
                td 
                  .table__drop-text 00KA-009800
                  .table__drop-gray-text 01.01.2023
                td 
                  .table__drop-text.table__text-center 2 шт
                td 
                  .table__drop-text.table__text-center 1
                td 
                  .table__drop-text 10940, 2 USD / 0%
                td 
                  .table__drop-checkbox.table__text-center 
                    input(type="checkbox")
            +table__drop-item(1)
            +table__drop-item(2)
            +table__drop-item(3)
            +table__drop-item(4)
            +table__drop-item(5)
            +table__drop-item(6)
            +table__drop-item(7)
            +table__drop-item(8)
            +table__drop-item(9)
                
  // /table

